{
  "name": "kiro-renewal-client",
  "version": "1.0.0",
  "description": "Kiro续杯工具",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "start:utf8": "set NODE_OPTIONS=--max-old-space-size=4096 && chcp 65001 && electron .",
    "dev": "chcp 65001 && electron . --dev",
    "dev:utf8": "set NODE_OPTIONS=--max-old-space-size=4096 && chcp 65001 && electron . --dev",
    "prebuild": "node scripts/obfuscate.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:direct": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:secure": "node scripts/secure-build.js",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "kiro",
    "renewal",
    "electron",
    "vue"
  ],
  "author": "Kiro Team",
  "license": "MIT",
  "devDependencies": {
    "asar": "^3.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "javascript-obfuscator": "^4.1.1",
    "node-pre-gyp": "^0.17.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "better-sqlite3": "^8.7.0",
    "bytenode": "^1.4.0",
    "element-plus": "^2.3.8",
    "koffi": "^2.14.1",
    "node-gyp-build": "^4.6.1",
    "node-machine-id": "^1.1.12",
    "socks-proxy-agent": "^8.0.5",
    "uuid": "^9.0.0",
    "vue": "^3.2.47",
    "win-dpapi": "^1.1.0"
  },
  "build": {
    "appId": "com.kiro.renewal",
    "productName": "Kiro续杯工具",
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/win-dpapi/**/*"
    ],
    "npmRebuild": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "compression": "maximum",
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "verifyUpdateCodeSignature": false,
      "extraResources": [
        {
          "from": "assets/app.manifest",
          "to": "app.manifest"
        }
      ]
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "Kiro续杯工具-${arch}.${ext}",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "assets/icon.ico",
      "target": [
        "AppImage"
      ]
    },
    "portable": {
      "artifactName": "Kiro续杯工具.exe",
      "requestExecutionLevel": "admin"
    },
    "files": [
      "main.js",
      "regedit-utils.js",
      "file-permission-utils.js",
      "kiro-auth.js",
      "index.html",
      "vue.global.js",
      "element-plus.js",
      "element-plus.css",
      "assets/**/*",
      "node_modules/**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.editorconfig,.idea,*.md,.travis.yml,appveyor.yml,.gitlab-ci.yml,circle.yml,.github}",
      "!{test,tests,__tests__,docs,doc,website,scripts}",
      "!**/{test,tests,__tests__,docs,doc,website,scripts}/**/*"
    ]
  }
}
